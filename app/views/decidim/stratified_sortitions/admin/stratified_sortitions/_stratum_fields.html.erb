<% stratum = form.object %>

<div class="card offer-task" id="<%= id %>-field">
  <div class="card-divider task-divider">
    <h2 class="card-title mb-4">
      <span><%= t(".stratum") %></span>

      <div class="ml-auto flex gap-x-4">
        <button class="button button__sm button__transparent-secondary small alert move-up-task button--title">
          <%= icon "arrow-up-line" %>
          <%= t(".up") %>
        </button>

        <button class="button button__sm button__transparent-secondary small alert move-down-task button--title">
          <%= icon "arrow-down-line" %>
          <%= t(".down") %>
        </button>

        <button class="button button__sm button__transparent-secondary small alert remove-task button--title">
          <%= t(".remove") %>
        </button>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <div class="col-md-8">
        <%=
          form.translated(
            :text_field,
            :name,
            tabs_id: id,
            label: "name",
            maxlength: 100
          )
        %>
      </div>
      <div class="col-md-4">
        <%= form.select :kind,
                        [[t("decidim.stratified_sortitions.admin.strata.kind.value", default: "Value"), "value"],
                        [t("decidim.stratified_sortitions.admin.strata.kind.numeric_range", default: "Numeric range"), "numeric_range"]] %>
      </div>
    </div>
  </div>

  <%= form.hidden_field :deleted, value: false %>
</div>
