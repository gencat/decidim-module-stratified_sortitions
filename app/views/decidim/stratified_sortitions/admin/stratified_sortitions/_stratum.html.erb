<% stratum = form.object %>

<div class="card stratified-sortition-stratum" id="<%= id %>-field">
  <div class="card-divider stratum-divider">
    <h2 class="card-title mb-4">
      <span><%= t(".title") %></span>

      <div class="ml-auto flex gap-x-4">
        <button class="button button__sm button__transparent-secondary small alert move-up-stratum button--title">
          <%= icon "arrow-up-line" %>
          <%= t(".up") %>
        </button>

        <button class="button button__sm button__transparent-secondary small alert move-down-stratum button--title">
          <%= icon "arrow-down-line" %>
          <%= t(".down") %>
        </button>

        <button class="button button__sm button__transparent-secondary small alert remove-stratum button--title">
          <%= t(".remove") %>
        </button>
      </div>
    </h2>
  </div>

  <div class="card-divider stratum-fields">
    <div class="translated-field">
      <%= form.translated(
          :text_field,
          :name,
          tabs_id: id,
          label: t(".name"),
          maxlength: 100) %>
    </div>
    <div>
      <%= form.select :kind,
                      [[t("decidim.stratified_sortitions.admin.stratified_sortitions.stratum.kind.value"), "value"],
                      [t("decidim.stratified_sortitions.admin.stratified_sortitions.stratum.kind.numeric_range"), "numeric_range"]],
                      label: t("decidim.stratified_sortitions.admin.stratified_sortitions.stratum.kind.title") %>
    </div>
  </div>
  <%= form.hidden_field :deleted, value: false %>
  <%#= render "substrata", form: form, stratum: stratum %>
</div>

