<div class="nested-fields substratum-fields">
  <div class="row">
    <%= f.translated :text_field, :name, placeholder: t("decidim.stratified_sortitions.admin.substrata.name", default: "Name") %>
    <%= f.translated :text_field, :value, placeholder: t("decidim.stratified_sortitions.admin.substrata.value", default: "Value") %>
    <%= f.text_field :range, placeholder: t("decidim.stratified_sortitions.admin.substrata.range", default: "Range (e.g. 0-18)") %>
    <%= f.number_field :weighing, step: 0.1, placeholder: t("decidim.stratified_sortitions.admin.substrata.weighing", default: "Weighing") %>
    <%= link_to_remove_association t("decidim.stratified_sortitions.admin.substrata.remove", default: "Remove substratum"), f, class: "button button__danger" %>
  </div>
</div>
